<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 bg-light sidebar">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active">Opción 1</a>
                <a href="#" class="list-group-item list-group-item-action">Opción 2</a>
                <a href="#" class="list-group-item list-group-item-action">Opción 3</a>
                <a href="#" class="list-group-item list-group-item-action">Opción 4</a>
                <a href="#" class="list-group-item list-group-item-action">Opción 5</a>
                <a href="#" class="list-group-item list-group-item-action">Opción 6</a>
                <a href="#" class="list-group-item list-group-item-action">Opción 7</a>
            </div>
        </div>
        <div class="col-md-10 offset-md-2">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="my-4">Dashboard</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead class="bg-primary text-white">
                                <tr>
                                    <th>Id</th>
                                    <th>Fecha</th>
                                    <th>#</th>
                                    <th>Nombre</th>
                                    <th>Fecha de adquisicion</th>
                                    <th>Caracteristicas</th>
                                    <th>Cantidad</th>
                                    <th>#</th>
                                    <th>Estatus</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in GetVehiculos())
                                {
                                    <tr>
                                        <td>@item.ID</td>
                                        <td>@item.Modelo</td>
                                        <td>@item.Entidad</td>
                                        <td>@item.Municipio</td>
                                        <td>@item.Unidad</td>
                                        <td>@item.Capacidad</td>
                                        <td>@item.Color</td>
                                        <td>@item.KM</td>
                                        <td>
                                            @if (item.Estatus == "Activo")
                                            {
                                                <span class="badge bg-success">@item.Estatus</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">@item.Estatus</span>
                                            }
                                        </td>
                                        <td>
                                            <button class="btn btn-danger btn-sm mx-1">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                            <button class="btn btn-warning btn-sm mx-1">
                                                <i class="fas fa-pen"></i>
                                            </button>
                                            <button class="btn btn-info btn-sm mx-1">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .sidebar {
        height: 100vh;
        position: fixed;
        background-color: #343a40;
        color: white;
        padding-top: 20px;
    }

        .sidebar .list-group-item {
            background-color: #343a40;
            color: white;
            border: none;
            margin-bottom: 10px; /* Añade margen inferior para separar las opciones */
        }

            .sidebar .list-group-item:hover {
                background-color: #495057;
            }

            .sidebar .list-group-item.active {
                background-color: #007bff;
                border-color: #007bff;
            }

        .sidebar .list-group-item-action {
            background-color: #6c757d;
            color: white;
        }

            .sidebar .list-group-item-action:hover {
                background-color: #5a6268;
            }

            .sidebar .list-group-item-action.active {
                background-color: #007bff;
                border-color: #007bff;
            }
</style>

